<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PerfilSetingsActivity"
        android:id="@+id/frameLayoutPerfil">
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/progressBar2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>
    <android.support.v4.widget.CircleImageView

            app:civ_border_width="10dp"
            app:civ_border_color="#FF000000"

            app:srcCompat="@drawable/avatar"
            android:id="@+id/perfil_foto_perfil"

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/avatar"
            android:visibility="visible"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="20dp"
            android:background="@drawable/background_btn"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.027"/>
    <TextView
            android:text="@string/perfil_nome_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textVieperfil_nome_perfil"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintStart_toEndOf="@+id/perfil_foto_perfil"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintTop_toTopOf="@+id/perfil_foto_perfil"
            android:layout_marginTop="8dp" android:elevation="10dp"/>
    <Button
            android:text="@string/txt_editar_perfil"
            android:layout_width="0dp"
            android:id="@+id/btn_editar_perfil"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textVieperfil_nome_perfil"
            app:layout_constraintStart_toStartOf="@+id/textVieperfil_nome_perfil"
            app:layout_constraintEnd_toEndOf="@+id/textVieperfil_nome_perfil"
            android:layout_height="21dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/perfil_foto_perfil"
            android:background="@drawable/background_btn_perfil_editar"
            android:elevation="20dp"
            android:textSize="12sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>